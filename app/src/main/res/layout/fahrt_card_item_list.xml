<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:background="@drawable/card_ma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Zielorttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fahrziel Anzeige"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/Standorttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Standort/Startpunkt Anzeige"
                        android:textColor="#77ffffff"
                        android:textSize="16dp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/Kartenzugriff"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_map_platzhalter"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ZeitAnkunft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uhrzeit Ankunft"
                    android:textColor="@color/black"
                    android:textSize="34dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_arrow_back"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/ZeitAbfahrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abfahrtszeit bzw ab Abholpunkt"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="-4dp"
                    android:layout_marginLeft="8dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/NutzerZugriff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:text="Nutzer, link zum Profil"
                        android:textColor="#a1ffffff"
                        android:textSize="18dp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>